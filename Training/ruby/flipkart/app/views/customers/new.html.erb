<% if current_user %>
	<% controller.redirect_to '/index' %>
<% else %>
	<h1>New User</h1>
	<%= form_for :customer, url:'/register' do |f| %>
		<p>
			<%= f.label :name %><br>
			<%= f.text_field :name  %>
		</p>
		<p>
			<%= f.label :email %><br>
			<%= f.text_field :email %>
		</p>
		<p>
			<%= f.label :Password %><br>
			<%= f.password_field :password %>
		</p>
		<p>
		<%= f.submit :signup %>

		</p>
	<%end%>
<% end %>