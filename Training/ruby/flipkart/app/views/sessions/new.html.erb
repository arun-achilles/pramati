<% if current_user %>
	<% controller.redirect_to '/index' %>
<% else %>
	<h1>User Login Form</h1>
	<%= form_for :customer, url:'/login' do |f| %>

		<p>
			<%= f.label :email %><br>
			<%= f.text_field :email %>
		</p>
		<p>
			<%= f.label :Password %><br>
			<%= f.password_field :password %>
		</p>
		<p>
		<%= f.submit :signin %>
		</p>
	<% end %>
<% end %>