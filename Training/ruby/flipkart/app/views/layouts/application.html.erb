<!DOCTYPE html>
<html>
  <head>
    <title>Flipkart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js' %>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js' %>
    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js' %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-warning ">
      <a class="navbar-brand text-primary" href="#">Flipkart</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <div class ="float-left">
        <ul class="navbar-nav float-right">
          <li class="nav-item active">
             <%= link_to 'home', index_path, class: "nav-link" %> 
          </li>
          <li class="nav-item active">
             <%= link_to 'My orders', order_path, class: "nav-link" %> 
          </li>
          <!--<li class="nav-item">
             <%= link_to 'sign in', sign_in_path, class: "nav-link" %> 
          </li>
          <li class="nav-item">
            <%= link_to 'sign up', sign_up_path, class: "nav-link" %> 
            </div>
          </li>
          <li class="nav-item">
            <%= link_to 'log out', sign_out_path, class: "nav-link" %> 
            </div>
          </li>-->
           <li class="nav-item">
             <%= link_to 'Cart', cart_path, class: "nav-link" %> 
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
               <% if current_user %>
               <%= link_to 'log out', sign_out_path, class: "dropdown-item" %> 
               <% else %>
               <%= link_to 'sign in', sign_in_path, class: "dropdown-item" %> 
               <%= link_to 'sign up', sign_up_path, class: "dropdown-item" %>
               <% end %>
            </div>
          </li>
         
        </ul>
        </div>
           
      
        
      </div>
    </nav> 

    <div class = "mt-4 container">
      <%= yield %>
    </div>

  </body>
</html>
